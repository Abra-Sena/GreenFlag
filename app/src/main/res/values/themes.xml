<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenFlag" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Custom fonts. -->
    <style name="Theme.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/museo_sans_500</item>
        <item name="android:fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">@dimen/text_size_headline5</item>
    </style>
    <style name="Theme.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/museo_sans_300</item>
        <item name="android:fontFamily">@font/museo_sans_300</item>
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>
    <style name="Theme.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/museo_sans_300</item>
        <item name="android:fontFamily">@font/museo_sans_300</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

    <style name="Theme.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="fontFamily">@font/museo_sans_500</item>
        <item name="android:background">@drawable/gradient_button_background_2x</item>
        <item name="android:fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>